<Window x:Class="lab13_SharedResourceTask3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab13_SharedResourceTask3"
        mc:Ignorable="d"
        Title="Упражнение 3. Разделяемые ресурсы " Height="450" Width="800">
    <Window.Resources>
        <!-- ОБЩИЙ ресурс (x:Shared="True" по умолчанию) -->
        <SolidColorBrush x:Key="SharedBrush" Color="LightBlue" />

        <!-- РАЗДЕЛЯЕМЫЙ ресурс (x:Shared="False") -->
        <SolidColorBrush x:Shared="False" x:Key="NonSharedBrush" Color="LightGreen" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Демонстрация x:Shared='False'" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Левая панель - ОБЩИЕ ресурсы -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="x:Shared='True' (по умолчанию)" 
                         FontWeight="Bold" FontSize="14"
                         Background="LightGray" Padding="10" Margin="0,0,0,10"/>

                <TextBlock Text="Один объект для всех элементов:" 
                        Margin="0,0,0,10" TextWrapping="Wrap"/>

                <Button x:Name="sharedBtn1" Content="Кнопка 1" 
                      Background="{StaticResource SharedBrush}" 
                      Height="30" Margin="0,5"/>

                <Button x:Name="sharedBtn2" Content="Кнопка 2" 
                        Background="{StaticResource SharedBrush}" 
                        Height="30" Margin="0,5"/>

                <Button x:Name="sharedBtn3" Content="Кнопка 3" 
                        Background="{StaticResource SharedBrush}" 
                        Height="30" Margin="0,5"/>

                <Button Content="Изменить ВСЕ кнопки" 
                        Click="ChangeSharedBrushes_Click"
                        Margin="0,20,0,0" Padding="10,5"/>
            </StackPanel>
            <!-- Правая панель - РАЗДЕЛЯЕМЫЕ ресурсы -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="x:Shared='False'" 
                        FontWeight="Bold" FontSize="14"
                        Background="LightGray" Padding="10" Margin="0,0,0,10"/>

                <TextBlock Text="Отдельный объект для каждого элемента:" 
                           Margin="0,0,0,10" TextWrapping="Wrap"/>

                <Button x:Name="nonSharedBtn1" Content="Кнопка 1" 
                        Background="{StaticResource NonSharedBrush}" 
                        Height="30" Margin="0,5"/>

                <Button x:Name="nonSharedBtn2" Content="Кнопка 2" 
                        Background="{StaticResource NonSharedBrush}" 
                        Height="30" Margin="0,5"/>

                <Button x:Name="nonSharedBtn3" Content="Кнопка 3" 
                        Background="{StaticResource NonSharedBrush}" 
                        Height="30" Margin="0,5"/>
                <Button Content="Изменить только первую кнопку" 
                        Click="ChangeNonSharedBrushes_Click"
                        Margin="0,20,0,0" Padding="10,5"/>
            </StackPanel>
        </Grid>
        <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10" Margin="0,20,0,0">
            <TextBlock x:Name="infoText" Text="Нажмите кнопки, чтобы увидеть разницу между x:Shared='True' и x:Shared='False'" 
                       TextAlignment="Center" FontStyle="Italic"/>
        </Border>
    </Grid>
    
</Window>
