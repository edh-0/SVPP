<Window x:Class="lab13__StaticVsDynamicResourceTask4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab13__StaticVsDynamicResourceTask4"
        mc:Ignorable="d"
        Title="Словари ресурсов (ResourceDictionary)" Height="720" Width="600">
    <Window.Resources>
        <SolidColorBrush x:Key="MyColor" Color="LightBlue"/>
    </Window.Resources>
    <TabControl>
        <!-- Вкладка 1: Static vs Dynamic Resource -->
        <TabItem Header="Static/Dynamic Resource">
            <ScrollViewer>
                <StackPanel Margin="20">
                    <!-- Заголовок -->
                    <TextBlock Text="# StaticResource vs DynamicResource" 
                              FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- StaticResource секция -->
                    <Border BorderBrush="Black" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="## StaticResource" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Не обновляется автоматически" FontSize="14" Margin="0,0,0,10"/>

                            <Separator Margin="0,0,0,10"/>

                            <TextBlock Text="### Static Border" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border Background="{StaticResource MyColor}" Height="40" Margin="0,0,0,10">
                                <TextBlock Text="- Static Text" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- DynamicResource секция -->
                    <Border BorderBrush="Black" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="## DynamicResource" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Обновляется автоматически" FontSize="14" Margin="0,0,0,10"/>

                            <Separator Margin="0,0,0,10"/>

                            <!-- Таблица с двумя колонками -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Левая колонка: Dynamic Border -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="| Dynamic Border |" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Border Background="{DynamicResource MyColor}" Height="40">
                                        <TextBlock Text="Dynamic Text" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <!-- Правая колонка: Dynamic Text -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="| Dynamic Text |" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Border Height="40" BorderBrush="Black" BorderThickness="1">
                                        <TextBlock Text="Dynamic Text" 
                                                  Foreground="{DynamicResource MyColor}"
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Кнопки управления -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
                        <Button Content="Изменить цвет ресурса" 
                               Click="ChangeColor_Click" 
                               Padding="15,8" Margin="0,0,10,0"/>

                        <Button Content="Показать разницу" 
                               Click="ShowDifference_Click" 
                               Padding="15,8"/>
                    </StackPanel>

                    <!-- Информация -->
                    <TextBlock x:Name="infoText" 
                              Text="Нажмите 'Изменить цвет ресурса' чтобы увидеть разницу" 
                              HorizontalAlignment="Center" 
                              TextWrapping="Wrap" 
                              TextAlignment="Center"
                              FontStyle="Italic"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- Вкладка 2: Resource Dictionaries -->
        <TabItem Header="Resource Dictionaries">
            <Grid Background="#FFE5E5E5">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Словари ресурсов (ResourceDictionary)" 
                                  FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" 
                                  Margin="0,0,0,20"/>

                        <!--Демонстрация ресурсов из словарей-->
                        <GroupBox Header="Демонстрация ресурсов из словарей" Margin="0,0,0,15">
                            <StackPanel>
                                <WrapPanel Margin="0,0,0,10">
                                    <!-- ВОТ ЗДЕСЬ НУЖНО СВЯЗАТЬ СТИЛИ КНОПОК С РЕСУРСАМИ -->
                                    <Button Content="Primary Button" Margin="5" 
                                            Style="{DynamicResource PrimaryButtonStyle}"/>
                                    <Button Content="Success Button" Margin="5" 
                                            Style="{DynamicResource SuccessButtonStyle}"/>
                                    <Button Content="Warning Button" Margin="5" 
                                            Style="{DynamicResource WarningButtonStyle}"/>
                                </WrapPanel>

                                <!-- ВОТ ЗДЕСЬ НУЖНО СВЯЗАТЬ ФОН БОРДЕРА С РЕСУРСОМ -->
                                <Border Height="40" CornerRadius="5" Margin="0,5"
                                        Background="{DynamicResource PrimaryBrush}">
                                    <TextBlock Text="Primary Border" Foreground="White" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- ВОТ ЗДЕСЬ НУЖНО СВЯЗАТЬ ЦВЕТ ТЕКСТА С РЕСУРСОМ -->
                                <TextBlock Text="Текст с акцентным цветом" 
                                          FontWeight="Bold" Margin="0,10,0,5"
                                          Foreground="{DynamicResource AccentBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Информация о словарях -->
                        <GroupBox Header="Информация о подключенных словарях" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <TextBlock Text="Подключенные словари:" FontWeight="Bold" Margin="0,0,0,5"/>

                                <ListBox x:Name="dictionariesList" Height="80" Margin="0,0,0,10">
                                    <ListBoxItem>Colors.xaml - цвета и кисти</ListBoxItem>
                                    <ListBoxItem>Styles.xaml - стили кнопок</ListBoxItem>
                                    <ListBoxItem>Templates.xaml - шаблоны элементов</ListBoxItem>
                                </ListBox>

                                <Button Content="Показать все ресурсы из словарей" 
                                        Click="ShowDictionaryResources_Click"
                                        Background="#3498DB" Foreground="White" 
                                        Padding="10,5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Динамическое управление словарями -->
                        <GroupBox Header="Динамическое управление словарями" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <WrapPanel Margin="0,0,0,10">
                                    <Button Content="Добавить словарь" 
                                            Click="AddDictionary_Click"
                                            Background="#27AE60" Foreground="White" 
                                            Padding="10,5" Margin="0,0,10,5"/>
                                    <Button Content="Удалить словарь" 
                                            Click="RemoveDictionary_Click"
                                            Background="#E74C3C" Foreground="White" 
                                            Padding="10,5" Margin="0,0,10,5"/>
                                    <Button Content="Очистить словари" 
                                            Click="ClearDictionaries_Click"
                                            Background="#F39C12" Foreground="White" 
                                            Padding="10,5" Margin="0,0,10,5"/>
                                </WrapPanel>

                                <TextBlock x:Name="dictionaryStatusText" Foreground="Gray"
                                          Text="Статус: словари подключены" FontStyle="Italic"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Создание ресурсов программно -->
                        <GroupBox Header="Создание словаря программно">
                            <StackPanel Margin="10">
                                <WrapPanel Margin="0,0,0,10">
                                    <Button Content="Создать словарь в коде" 
                                            Click="CreateDictionaryInCode_Click"
                                            Background="#9B59B6" Foreground="White" 
                                            Padding="10,5" Margin="0,0,10,5"/>
                                    <Button Content="Использовать ресурс" 
                                            Click="UseProgrammaticResource_Click"
                                            Background="#1ABC9C" Foreground="White" 
                                            Padding="10,5" Margin="0,0,10,5"/>
                                </WrapPanel>

                                <Border x:Name="programmaticBorder" Margin="0,5"
                                        Background="LightGray" Height="40" CornerRadius="5">
                                    <TextBlock x:Name="programmaticText" 
                                               Text="Элемент для тестирования" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </TabItem>
    </TabControl>
</Window>