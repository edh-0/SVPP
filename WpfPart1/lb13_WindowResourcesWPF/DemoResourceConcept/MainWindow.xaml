<Window x:Class="DemoResourceConcept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoResourceConcept"
        mc:Ignorable="d"
        Title="Упражнение 1: Концепция ресурсов" Height="500" Width="800">
    <Window.Resources>
        <!-- Цвета -->
        <Color x:Key="PrimaryColor">#3498DB</Color>
        <Color x:Key="SecondaryColor">#2ECC71</Color>
        <Color x:Key="AccentColor">#E74C3C</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1ABC9C" Offset="0"/>
            <GradientStop Color="#3498DB" Offset="0.5"/>
            <GradientStop Color="#9B59B6" Offset="1"/>
        </LinearGradientBrush>

        <!-- Размеры и отступы -->
        <Thickness x:Key="StandardMargin">10</Thickness>
        <Thickness x:Key="LargeMargin">20</Thickness>
        <CornerRadius x:Key="CornerRadius">8</CornerRadius>

        <!-- Строки -->
        <system:String x:Key="WelcomeMessage" xmlns:system="clr-namespace:System;assembly=mscorlib">
            Добро пожаловать в лабораторную работу по ресурсам WPF!
        </system:String>

        <!-- Числовые значения -->
        <system:Double x:Key="HeaderFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">18</system:Double>
        <system:Double x:Key="StandardFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>

        <!-- Ресурсы уровня StackPanel -->
        <Style x:Key="LocalButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>
    <Grid Margin="{StaticResource StandardMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource GradientBrush}" 
                Padding="{StaticResource LargeMargin}"
                CornerRadius="{StaticResource CornerRadius}">
            <TextBlock Text="{StaticResource WelcomeMessage}"
                       FontSize="{StaticResource HeaderFontSize}"
                       FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
        </Border>
        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Демонстрация различных типов ресурсов:" 
                           FontSize="{StaticResource HeaderFontSize}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="{StaticResource StandardMargin}"/>

                <!-- Панель с кнопками, демонстрирующими ресурсы -->
                <Border BorderBrush="{StaticResource PrimaryBrush}" 
                        BorderThickness="2"
                        CornerRadius="{StaticResource CornerRadius}"
                        Padding="{StaticResource StandardMargin}"
                        Margin="{StaticResource StandardMargin}">

                    <StackPanel>
                        <TextBlock Text="Ресурсы уровня StackPanel:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <WrapPanel>
                            <Button Style="{StaticResource LocalButtonStyle}" 
                                    Background="{StaticResource PrimaryBrush}" 
                                    Content="Упражнение 2"
                                    Click="Task2_Click"/>
                            <Button 
                                    Style="{StaticResource LocalButtonStyle}" 
                                    Background="{StaticResource SecondaryBrush}"
                                    Content="Вторая кнопка"/>

                            <Button Style="{StaticResource LocalButtonStyle}" 
                                    Background="{StaticResource AccentBrush}"
                                    Content="Акцентная кнопка"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                
                <!-- Демонстрация сложных ресурсов -->
                <Border BorderBrush="{StaticResource SecondaryBrush}" 
                        BorderThickness="2"
                        CornerRadius="{StaticResource CornerRadius}"
                        Padding="{StaticResource StandardMargin}"
                        Margin="{StaticResource StandardMargin}">

                    <StackPanel>
                        <TextBlock Text="Сложные ресурсы:" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <!-- Grid с демонстрацией различных ресурсов -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Градиентная заливка:" 
                                           Margin="0,0,0,5"/>
                                <Border Height="60" 
                                        Background="{StaticResource GradientBrush}"
                                        CornerRadius="{StaticResource CornerRadius}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                <TextBlock Text="Цветовые ресурсы:" 
                                            Margin="0,0,0,5"/>
                                <WrapPanel>
                                    <Border Width="30" Height="30" 
                                           Background="{StaticResource PrimaryBrush}" 
                                           Margin="2" CornerRadius="4"/>
                                    <Border Width="30" Height="30" 
                                           Background="{StaticResource SecondaryBrush}" 
                                           Margin="2" CornerRadius="4"/>
                                    <Border Width="30" Height="30" 
                                           Background="{StaticResource AccentBrush}" 
                                           Margin="2" CornerRadius="4"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <!-- Нижний колонтитул -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryBrush}"
                Padding="{StaticResource StandardMargin}"
                CornerRadius="{StaticResource CornerRadius}"
                Margin="0,20,0,0">
            <TextBlock Text="Упражнение 1: выполнил Сергей Станкевич, ноябрь 2025" 
                       Foreground="White"
                       TextAlignment="Center"/>
        </Border>

    </Grid>
</Window>
