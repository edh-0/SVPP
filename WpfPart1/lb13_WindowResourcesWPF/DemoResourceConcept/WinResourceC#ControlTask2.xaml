<Window x:Class="DemoResourceConcept.WinResourceC_ControlTask2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoResourceConcept"
        mc:Ignorable="d"
        Title="Упражнение 2" Height="500" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Button x:Name="demoButton" 
                    Content="Тестовая кнопка" 
                    Height="40" Margin="0,10"/>

            <TextBlock x:Name="demoText" 
                        Text="Пример текста" 
                        FontSize="16" Margin="0,10"/>

            <Button Content="Добавить ресурс" 
                    Click="AddResource_Click"
                    Margin="0,5"/>

            <Button Content="Изменить ресурс" 
                    Click="ChangeResource_Click"
                    Margin="0,5"/>

            <Button Content="Получить ресурс" 
                    Click="GetResource_Click"
                    Margin="0,5"/>

            <Button Content="Удалить ресурс" 
                    Click="RemoveResource_Click"
                    Margin="0,5"/>
        </StackPanel>

    </Grid>
</Window>
