<Window x:Class="StudentCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Студенческая карточка" Height="530" Width="800"
        Background="#83BEEC">

    <Grid Margin="10">

        <!-- Панель выбора темы -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,370,0,10">
            <TextBlock Text="Тема:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"
                       FontWeight="Bold"/>
            <ComboBox x:Name="cmbTheme" 
                      Width="120" 
                      Height="25"
                      SelectionChanged="CmbTheme_SelectionChanged">
                <ComboBoxItem Content="Стандартная"/>
                <ComboBoxItem Content="Зеленая"/>
            </ComboBox>
        </StackPanel>

        <!-- Заголовок -->
        <TextBox HorizontalAlignment="Center" 
                 Margin="0,30,0,20"
                 TextWrapping="Wrap" 
                 Text="Профиль студента" 
                 VerticalAlignment="Top" 
                 FontSize="20"
                 FontWeight="Bold"
                 BorderThickness="0"
                 Background="Transparent"
                 IsReadOnly="True"/>

        <!-- Основной контент -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <!-- Личная информация -->
                <GroupBox Header="Личная информация" 
                          Margin="0,0,0,10"
                          Background="#EAF4FF"
                          BorderBrush="#5A9BD5"
                          BorderThickness="1">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Фамилия:" Margin="0,0,0,5"/>
                            <Label Content="Имя:" Margin="0,0,0,5"/>
                            <Label Content="Возраст:" Margin="0,0,0,5"/>
                            <Label Content="Пол:" Margin="0,26,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="txtLastName" Margin="0,0,0,5" Height="25" Text=""/>
                            <TextBox x:Name="txtFirstName" Margin="0,0,0,5" Height="25" Text=""/>
                            <TextBox x:Name="txtAge" Margin="0,0,0,5" Height="25" Text=""/>
                            <DatePicker x:Name="dpBirthDate" 
                                        Margin="0,0,0,5" 
                                        Height="25"
                                        SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rbMale" 
                                           Content="Мужской" 
                                           GroupName="Gender" 
                                           Margin="0,5,10,0"/>
                                <RadioButton x:Name="rbFemale" 
                                           Content="Женский" 
                                           GroupName="Gender" 
                                           Margin="0,5,10,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Контакты -->
                <GroupBox Header="Контакты" 
                          Margin="0,0,0,10"
                          Background="#EAF4FF"
                          BorderBrush="#5A9BD5"
                          BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Почта:" Margin="0,0,0,5"/>
                            <Label Content="Телефон:" Margin="0,0,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="txtEmail" 
                                    Margin="0,0,0,5" 
                                    Height="25" 
                                    Text="ivanov@ya.ru"/>
                            <TextBox x:Name="txtPhone" 
                                    Margin="0,0,0,5" 
                                    Height="25" 
                                    Text="+375 (__) ___ __ __"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Обучение -->
                <GroupBox Header="Обучение"
                          Background="#EAF4FF"
                          BorderBrush="#5A9BD5"
                          BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Курс:" Margin="0,0,0,5"/>
                            <Label Content="Специализация:" Margin="0,0,0,5"/>
                            <Label Content="Успеваемость:" Margin="0,0,0,5"/>
                            <Label Content="Заполнение профиля:" Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <ComboBox x:Name="cmbCourse" 
                                    Height="25" 
                                    Margin="0,0,0,5">
                                <ComboBoxItem Content="1 курс" IsSelected="True"/>
                                <ComboBoxItem Content="2 курс"/>
                                <ComboBoxItem Content="3 курс"/>
                                <ComboBoxItem Content="4 курс"/>
                            </ComboBox>

                            <ComboBox x:Name="cmbSpecialization" 
                                    Height="25" 
                                    Margin="0,0,0,5">
                                <ComboBoxItem Content="Программирование" IsSelected="True"/>
                                <ComboBoxItem Content="Дизайн"/>
                                <ComboBoxItem Content="Сети"/>
                            </ComboBox>

                            <StackPanel Margin="0,5,0,5">
                                <Slider x:Name="sliderPerformance" 
                                        Minimum="0" 
                                        Maximum="10" 
                                        Value="5"
                                        ValueChanged="Slider_ValueChanged"/>
                                <TextBlock x:Name="tbPerformanceValue" 
                                           Text="Оценка: 5" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <ProgressBar x:Name="pbProfileProgress" 
                                             Width="150" 
                                             Height="15" 
                                             Margin="0,0,10,0"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="0"/>
                                <TextBlock x:Name="tbProgressPercent" 
                                           Text="0%" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <!-- Правая колонка - фото -->
            <StackPanel Grid.Column="1">
                <Border BorderBrush="#5A9BD5" 
                        BorderThickness="1" 
                        Height="280"
                        Background="#EAF4FF"
                        Margin="0,0,0,10">
                    <Image x:Name="imgPhoto" Stretch="Uniform"/>
                </Border>

                <!-- КНОПКА "Загрузить фото" -->
                <Button x:Name="btnLoadPhoto"
                        Content="Загрузить фото" 
                        Height="30"
                        Background="#5A9BD5"
                        Foreground="White"
                        BorderBrush="#2E6DA4"
                        BorderThickness="1"
                        FontWeight="Bold"
                        Click="BtnLoadPhoto_Click"/>
            </StackPanel>
        </Grid>

        <!-- Кнопки внизу окна -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,10">
            <Button Content="Очистить" 
                    Width="100" 
                    Margin="0,0,20,0"
                    Background="#5A9BD5"
                    Foreground="White"
                    BorderBrush="#2E6DA4"
                    BorderThickness="1"
                    FontWeight="Bold"
                    Click="btnClear_Click"/>

            <Button Content="Сохранить" 
                    Width="100"
                    Background="#5A9BD5"
                    Foreground="White"
                    BorderBrush="#2E6DA4"
                    BorderThickness="1"
                    FontWeight="Bold"
                    Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>