<Window x:Class="StudentCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="800">
    <Grid Margin="10" Background="#83BEEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,0,0,20" 
                 Grid.Row="0"
                 TextWrapping="Wrap" 
                 Text="Профиль студента" 
                 VerticalAlignment="Center" 
                 FontSize="20"
                 FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <GroupBox Header="Личная информация">
                    <Grid Margin="5">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Фамилия:" Margin="0,0,0,5"/>
                            <Label Content="Имя:" Margin="0,0,0,5"/>
                            <Label Content="Возраст:" Margin="0,0,0,5"/>
                            <Label Content="Пол:" Margin="0,26,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="txtLastName" Margin="0,0,0,5" Height="25" Text=""/>
                            <TextBox x:Name="txtFirstName" Margin="0,0,0,5" Height="25" Text=""/>
                            <TextBox x:Name="txtAge" Margin="0,0,0,5" Height="25" Text=""/>
                            <DatePicker x:Name="dpBirthDate" 
                                        Margin="0,0,0,5" 
                                        Height="25"
                                        SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                            
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rbMale" Content="Мужской" GroupName="Gender" Margin="0,5,10,0"/>
                                <RadioButton x:Name="rbFemale" Content="Женский" GroupName="Gender" Margin="0,5,10,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox  Header="Контакты" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Почта:" Margin="0,0,0,5"/>
                            <Label Content="Телефон:" Margin="0,0,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="txtEmail" Margin="0,0,0,5" Height="25" Text="ivanov@ya.ru"/>
                            <TextBox x:Name="txtPhone" Margin="0,0,0,5" Height="25" Text="+375 (__) ___ __ __"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Обучение">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Курс:" Margin="0,0,0,5"/>
                            <Label Content="Специализация:" Margin="0,0,0,5"/>
                            <Label Content="Успеваемость:" Margin="0,0,0,5"/>
                            <Label Content="Заполнение профиля:" Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <ComboBox x:Name="cmbCourse" Height="25" Margin="0,0,0,5">
                                <ComboBoxItem Content="1 курс" IsSelected="True"/>
                                <ComboBoxItem Content="2 курс"/>
                                <ComboBoxItem Content="3 курс"/>
                                <ComboBoxItem Content="4 курс"/>
                            </ComboBox>

                            <ComboBox x:Name="cmbSpecialization" Height="25" Margin="0,0,0,5">
                                <ComboBoxItem Content="Программирование" IsSelected="True"/>
                                <ComboBoxItem Content="Дизайн"/>
                                <ComboBoxItem Content="Сети"/>
                            </ComboBox>

                            <StackPanel Margin="0,5,0,5">
                                <Slider x:Name="sliderPerformance" 
                                        Minimum="0" 
                                        Maximum="10" 
                                        Value="5"
                                        ValueChanged="Slider_ValueChanged"/>
                                <TextBlock x:Name="tbPerformanceValue" 
                                           Text="Оценка: 5" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <ProgressBar x:Name="pbProfileProgress" 
                                             Width="150" 
                                             Height="15" 
                                             Margin="0,0,10,0"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="0"/>    
                                <TextBlock x:Name="tbProgressPercent" 
                                           Text="0%" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="1">

                <Border BorderBrush="Black" 
                        BorderThickness="1" 
                        Height="280"
                        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                        Margin="0,0,0,10">

                    <Image x:Name="imgPhoto" Stretch="Uniform"/>

                </Border>

                <Button Content="Загрузить фото" 
                        Click="BtnLoadPhoto_Click"/>

            </StackPanel>
        </Grid>

        <Button Content="Очистить" 
                HorizontalAlignment="Left" 
                Margin="105,0,0,0" 
                Grid.Row="2" 
                VerticalAlignment="Top" 
                Click="btnClear_Click"/>

        <Button Content="Сохранить" 
                HorizontalAlignment="Right" 
                Margin="0,0,105,0" 
                Grid.Row="2" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="0.169,0.582" 
                Click="btnSave_Click"/>
    </Grid>
</Window>