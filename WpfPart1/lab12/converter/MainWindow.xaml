<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер валют" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Конвертер валют" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Ввод суммы -->
        <TextBlock Grid.Row="1" Text="Введите сумму:" Margin="0,0,0,5"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="1" Margin="0,20,0,5" Height="25" 
                 Text="1" VerticalContentAlignment="Center"/>

        <!-- Выбор валют -->
        <TextBlock Grid.Row="2" Text="Выберите валюту:" Margin="0,0,0,5"/>
        <ComboBox x:Name="FromCurrencyComboBox" Grid.Row="2" Margin="0,20,0,5" Height="25" 
                  VerticalContentAlignment="Center"/>
        <TextBlock Grid.Row="2" Text="->" Margin="150,20,0,5" HorizontalAlignment="Left" 
                   VerticalAlignment="Center"/>
        <ComboBox x:Name="ToCurrencyComboBox" Grid.Row="2" Margin="180,20,0,5" Height="25" 
                  VerticalContentAlignment="Center"/>

        <!-- Кнопка конвертации -->
        <Button Grid.Row="3" Content="Конвертировать" Height="30" Margin="0,10" 
                Click="ConvertButton_Click" FontWeight="Bold"/>

        <!-- Результат -->
        <TextBlock Grid.Row="4" Text="Результат:" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="4" Margin="0,30,0,0" FontSize="16" 
                   FontWeight="Bold" Foreground="DarkBlue"/>
    </Grid>
</Window>