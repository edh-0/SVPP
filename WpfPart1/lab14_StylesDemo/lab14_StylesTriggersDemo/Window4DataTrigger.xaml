<Window x:Class="lab14_StylesTriggersDemo.Window4DataTrigger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab14_StylesTriggersDemo"
        mc:Ignorable="d"
        Title="Window4DataTrigger" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=checkBox1, Path=IsChecked}"
                            Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel >
            <CheckBox x:Name="checkBox1" Content="Disable" />
            <Button x:Name="button1" Content="Кнопка 4 DataTrigger" />
        </StackPanel>
    </Grid>
</Window>
