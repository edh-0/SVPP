<Window x:Class="lab14_StylesTriggersDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab14_StylesTriggersDemo"
        mc:Ignorable="d"
        Title="Тест триггеров" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Orange"/>
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Width" Value="160"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="Green"/>
                    <Setter Property="BorderBrush" Value="DarkRed"/>
                    <Setter Property="Width" Value="88"/>
                    <Setter Property="Height" Value="100"/>
                </Trigger>

                <Trigger Property="IsMouseCaptureWithin" Value="True">
                    <Setter Property="Background" Value="DarkBlue"/>
                    <Setter Property="Foreground" Value="LightBlue"/>
                    <Setter Property="Padding" Value="15,8"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="FontSize" Value="14"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Background="DarkGray">
            <TextBlock Text="Тестирование Property Trigger" 
                        FontSize="16" FontWeight="Bold"/>

            <Button Content="Базовый стиль" 
                    MouseEnter="Button_MouseEnter"
                    MouseDoubleClick="Button_MouseDoubleClick"
                    MouseDown="Button_MouseDown"/>

            <Button Content="Обычная кнопка без стиля" 
                    Background="LightGreen" Padding="15,8" Margin="10"
                    MouseEnter="Button_MouseEnter"
                    MouseDown="Button_MouseDown"/>

            <Button x:Name="button1" Content="Кнопка 1"/>
            <Button x:Name="button2" Content="Кнопка 2"/>

            <!-- Кнопки запуска дочерних окон -->
            <TextBlock Text="Кнопки запуска окон: " FontSize="16" FontWeight="Bold"/>

            <Button x:Name="buttonMultiTrigger" Content="Окно MultiTrigger" 
                    Click="buttonMultiTrigger_Click"/>

            <Button x:Name="buttonEventTrigger" Content="Окно EventTrigger" 
                    Click="buttonEventTrigger_Click"/>

            <Button x:Name="buttonDataTrigger" Content="Окно DataTrigger" 
                    Click="buttonDataTrigger_Click"/>

        </StackPanel>

    </Grid>
</Window>
