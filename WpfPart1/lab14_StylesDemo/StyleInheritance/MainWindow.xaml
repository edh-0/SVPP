<Window x:Class="StyleInheritance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleInheritance"
        mc:Ignorable="d"
        Title="НАСЛЕДОВАНИЕ СТЕЛИЙ" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="20">
                <StackPanel.Resources>
                    <!-- Базовый стиль -->
                    <Style x:Key="BaseButtonStyle" TargetType="Button">
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="Margin" Value="10,5,5,5"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Style>
                    <!-- Наследуемые стили -->
                    <Style x:Key="PrimaryButtonStyle" TargetType="Button" 
                            BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#2980B9"/>
                    </Style>

                    <Style x:Key="SuccessButtonStyle" TargetType="Button" 
                          BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#229954"/>
                    </Style>

                    <Style x:Key="WarningButtonStyle" TargetType="Button" 
                            BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background" Value="#F39C12"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderBrush" Value="#E67E22"/>
                    </Style>
                    <Style x:Key="DangerButtonStyle" TargetType="Button" 
                            BasedOn="{StaticResource WarningButtonStyle}">
                        <Setter Property="Background" Value="#E74C3C"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#C0392B"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </StackPanel.Resources>

                <TextBlock Text="5. Наследование стилей (BasedOn)" 
                        FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Базовый стиль (общие свойства):" 
                        FontWeight="Bold" Margin="0,0,0,10"/>

                <Button Content="Base Style" Style="{StaticResource BaseButtonStyle}"/>

                <TextBlock Text="Наследуемые стили:" 
                        FontWeight="Bold" Margin="0,20,0,10"/>

                <WrapPanel Margin="0,10">
                    <Button Content="Primary" Style="{StaticResource PrimaryButtonStyle}"/>
                    <Button Content="Success" Style="{StaticResource SuccessButtonStyle}"/>
                    <Button Content="Warning" Style="{StaticResource WarningButtonStyle}"/>
                    <Button Content="Danger" Style="{StaticResource DangerButtonStyle}"/>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>