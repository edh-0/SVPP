<Window x:Class="lab14_ThemesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab14_ThemesWPF"
        mc:Ignorable="d"
        Style="{DynamicResource WindowStyle}" 
        Title="Темы WPF" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="styleBox" />
            <Button Content="Hello WPF" Style="{DynamicResource ButtonStyle}" />
            <TextBlock Text="Windows Presentation Foundation" 
                    Style="{DynamicResource TextBlockStyle}" />
        </StackPanel>

    </Grid>
</Window>
