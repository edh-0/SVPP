<Window x:Class="lab23_task1_converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab23_task1_converter"
        xmlns:converters="clr-namespace:lab23_task1_converter"
        mc:Ignorable="d"
        Title="converter task 1 lab 23" Height="450" Width="800">

    <Window.Resources>
        <converters:GradeConverter x:Key="GradeConverter"/>
    </Window.Resources>

    <StackPanel Margin="20">
        <Slider x:Name="GradeSlider" Minimum="0" Maximum="100" Value="75"/>

        <TextBlock Margin="0,20,0,0" FontSize="16">
            <Run Text="Число: "/>
            <Run Text="{Binding ElementName=GradeSlider, Path=Value, StringFormat={}{0:F0}}"/>
        </TextBlock>

        <TextBlock Margin="0,10" FontSize="16" FontWeight="Bold">
            <Run Text="Оценка: "/>
            <Run Text="{Binding ElementName=GradeSlider, Path=Value, 
                         Converter={StaticResource GradeConverter}}"/>
        </TextBlock>
    </StackPanel>
</Window>