<Window x:Class="MyBindingCodeBehind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBindingCodeBehind"
        mc:Ignorable="d"
        Title="Code Behind" Height="450" Width="800">

    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="SourceTextBox" TextWrapping="Wrap" Text="Введите текст здесь" Width="200" Margin="0,0,0,10"/>
            <TextBlock x:Name="TargetTextBlock" Text="Текст появится здесь" Margin="0,0,0,20"/>
            <TextBox x:Name="InputTextBox" TextWrapping="Wrap" Text="0" Width="200" Margin="0,0,0,10"/>
            <Slider x:Name="OutputSlider"  Minimum="0" Maximum="100" Value="0" Width="200"/>
        </StackPanel>
    </Grid>
</Window>