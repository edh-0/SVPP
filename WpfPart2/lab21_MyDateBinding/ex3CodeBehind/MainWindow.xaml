<Window x:Class="PersonalDataApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personal Data" Height="250" Width="350"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <!-- Имя -->
        <Label Content="First Name:" Margin="0,0,0,5" FontWeight="Bold" />
        <TextBox x:Name="txtFirstName" 
    Height="25" Margin="0,0,0,15" FontSize="14"/>

        <!-- Фамилия -->
        <Label Content="Last Name:" Margin="0,0,0,5" FontWeight="Bold" />
        <TextBox x:Name="txtLastName" 
    Height="25" Margin="0,0,0,15" FontSize="14"/>

        <!-- Отображение данных в реальном времени -->
        <TextBlock Text="Full name (updated automatically):" FontWeight="Bold" Margin="0,0,0,5"/>
        <Border Background="#f5f5f5" Padding="10" BorderThickness="1" BorderBrush="#ddd">
            <TextBlock x:Name="txtFullName" 
    FontSize="12" FontWeight="Bold" Foreground="Blue" TextWrapping="Wrap"/>
        </Border>
    </StackPanel>
</Window>