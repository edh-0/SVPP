<Window x:Class="ex3_BindingFormatting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex3_BindingFormatting"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Binding Formatting Демо" Height="500" Width="800">
    <Window.Resources>
        <local:FormatConverter x:Key="FormatConverter"/>
    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="StringFormat - не работает">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Демонстрация StringFormat" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Введите число:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="inputNumber" Text="1234.5678" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <TextBlock Text="Примеры форматирования:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="1. Валюта:" Margin="0,5"/>
                                <TextBlock Text="2. 2 десятичных знака:" Margin="0,5"/>
                                <TextBlock Text="3. Число с разделителями:" Margin="0,5"/>
                                <TextBlock Text="4. Процент:" Margin="0,5"/>
                                <TextBlock Text="5. Целое число (5 цифр):" Margin="0,5"/>
                                <TextBlock Text="6. Шестнадцатеричный:" Margin="0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber, Path=Text, StringFormat={}{0:C}}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber, Path=Text, StringFormat={}{0:F2}}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber, Path=Text, StringFormat={}{0:N2}}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber, Path=Text, StringFormat={}{0:P1}}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber, Path=Text, StringFormat={}{0:D5}}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber, Path=Text, StringFormat={}{0:X}}"/></TextBlock>
                            </StackPanel>
                        </Grid>
                        <Button Content="Обновить форматирование" Click="UpdateFormatting_Click" HorizontalAlignment="Center" Margin="0,20" Padding="10,5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Конвертеры - это работает">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Исправленный StringFormat" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBox x:Name="inputNumber2" Text="1234.5678" FontSize="14" Margin="0,0,0,20"/>
                        <Button Content="Обновить форматирование" Click="UpdateFormatting_Click" HorizontalAlignment="Center" Margin="0,20" Padding="10,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="1. Валюта:" Margin="0,5"/>
                                <TextBlock Text="2. 2 десятичных знака:" Margin="0,5"/>
                                <TextBlock Text="3. Число с разделителями:" Margin="0,5"/>
                                <TextBlock Text="4. Процент:" Margin="0,5"/>
                                <TextBlock Text="5. Целое число (5 цифр):" Margin="0,5"/>
                                <TextBlock Text="6. Шестнадцатеричный:" Margin="0,5"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber2, Path=Text, Converter={StaticResource FormatConverter}, ConverterParameter=C}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber2, Path=Text, Converter={StaticResource FormatConverter}, ConverterParameter=F2}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber2, Path=Text, Converter={StaticResource FormatConverter}, ConverterParameter=N2}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber2, Path=Text, Converter={StaticResource FormatConverter}, ConverterParameter=P1}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber2, Path=Text, Converter={StaticResource FormatConverter}, ConverterParameter=D5}"/></TextBlock>
                                <TextBlock Margin="0,5"><Run Text="{Binding ElementName=inputNumber2, Path=Text, Converter={StaticResource FormatConverter}, ConverterParameter=X}"/></TextBlock>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
