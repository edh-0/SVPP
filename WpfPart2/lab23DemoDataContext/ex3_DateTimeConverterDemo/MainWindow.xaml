<Window x:Class="ex3_DateTimeConverterDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex3_DateTimeConverterDemo"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Конвертер даты и времени" Height="470" Width="800">
    <Window.Resources>
        <local:DateTimeConverter x:Key="DateTimeConverter"/>
        <local:TimeSpanConverter x:Key="TimeSpanConverter"/>
        <local:DayOfWeekConverter x:Key="DayOfWeekConverter"/>
    </Window.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="Конвертер даты и времени" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Выберите дату и время:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DatePicker x:Name="datePicker" SelectedDate="{x:Static sys:DateTime.Now}" Margin="0,0,0,10"/>
                        <TextBlock Text="Выберите время:" Margin="0,10,0,5"/>
                        <Slider x:Name="timeSlider" Width="200" Minimum="0" Maximum="23" Value="12"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Примеры форматирования даты:" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel>
                    <TextBlock Margin="0,5"><Run Text="1. Короткая дата: "/><Run Text="{Binding ElementName=datePicker, Path=SelectedDate, Converter={StaticResource DateTimeConverter}, ConverterParameter=d}"/></TextBlock>
                    <TextBlock Margin="0,5"><Run Text="2. Полная дата: "/><Run Text="{Binding ElementName=datePicker, Path=SelectedDate, Converter={StaticResource DateTimeConverter}, ConverterParameter=D}"/></TextBlock>
                    <TextBlock Margin="0,5"><Run Text="3. Дата и время: "/><Run Text="{Binding ElementName=datePicker, Path=SelectedDate, Converter={StaticResource DateTimeConverter}, ConverterParameter=g}"/></TextBlock>
                    <TextBlock Margin="0,5"><Run Text="4. Свой формат (dd.MM.yyyy): "/><Run Text="{Binding ElementName=datePicker, Path=SelectedDate, Converter={StaticResource DateTimeConverter}, ConverterParameter='dd.MM.yyyy'}"/></TextBlock>
                    <TextBlock Margin="0,5"><Run Text="5. День недели: "/><Run Text="{Binding ElementName=datePicker, Path=SelectedDate, Converter={StaticResource DayOfWeekConverter}}"/></TextBlock>
                    <TextBlock Margin="0,5"><Run Text="6. Относительное время: "/><Run Text="{Binding ElementName=datePicker, Path=SelectedDate, Converter={StaticResource TimeSpanConverter}}"/></TextBlock>
                    <TextBlock Margin="0,5"><Run Text="7. Время дня: "/><Run Text="{Binding ElementName=timeSlider, Path=Value, Converter={StaticResource DateTimeConverter}, ConverterParameter=TIME}"/></TextBlock>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>